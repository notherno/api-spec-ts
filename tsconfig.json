{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": ["dom", "es2015", "es2016", "es2017.object"]
  },
  "exclude": ["node_modules"]
}
